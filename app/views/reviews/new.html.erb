 <div class="card mt-2 ml-5 mr-5 p-1 shadow-sm rounded-lg" >
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <div class="d-flex align-items-center justify-content-between">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Back to the list", restaurants_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>