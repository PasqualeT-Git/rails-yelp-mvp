<div class="card mt-2 ml-5 mr-5 p-1 shadow-sm rounded-lg" >
  <h1 style="font-family: serif;">Restaurants</h1>
</div>

<div class="card ml-5 mb-5 mt-5 p-5" style="max-width: 48rem;">
  <table class="table m-auto w-100">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Category</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to restaurant_path(restaurant), method: :delete, data: { confirm: "Do you want delete #{restaurant.name}?" } do %>
          <i class="fas fa-trash"></i>
        </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary mt-3 ml-5" %>
